<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientshape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_bookCover"
            android:layout_width="0dp"
            android:layout_height="150sp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:orientation="vertical"

            android:padding="5dp">

            <TextView
                android:id="@+id/textView_bookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                tools:text="Book Title" />

            <TextView
                android:id="@+id/textView_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                tools:text="Author Names" />

            <TextView
                android:id="@+id/textView_publshDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                tools:text="1900-01-01" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>